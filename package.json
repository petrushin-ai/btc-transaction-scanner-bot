{
  "name": "btc-transaction-scanner-bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "author": "@wedigital",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "prestart": "bun run lint",
    "example:rates": "bun src/example/currencyRates.ts",
    "healthcheck": "bun src/example/healthcheck.ts",
    "fixtures:get-blocks": "bun tests/utils/fetch-block-fixtures.ts",
    "fixtures:update-addresses": "bun tests/utils/update-addresses-from-fixtures.ts",
    "test:compare": "bun tests/utils/compare-raw-vs-verbose.ts",
    "test": "bun test --timeout=10000 --preload ./tests/setup.metrics.ts",
    "test:watch": "bun test --watch --timeout=10000 --preload ./tests/setup.metrics.ts",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "dotenv": "^16.4.5",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "bun-types": "^1.2.20",
    "tslint": "^6.1.3",
    "typescript": "^5.9.2"
  }
}
