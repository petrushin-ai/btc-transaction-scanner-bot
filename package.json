{
  "name": "btc-transaction-scanner-bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "author": "@wedigital",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "prestart": "bun run lint",
    "docker:build": "docker build -t btc-transaction-scanner-bot .",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f | cat",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "example:rates": "bun scripts/currencyRates.ts",
    "healthcheck": "bun scripts/healthcheck.ts",
    "fixtures:get-blocks": "bun test/utils/fetch-block-fixtures.ts",
    "fixtures:update-addresses": "bun test/utils/update-addresses-from-fixtures.ts",
    "test:compare": "bun test/utils/compare-raw-vs-verbose.ts",
    "test": "bun test --timeout=10000 --preload test/setup.metrics.ts",
    "test:watch": "bun test --watch --timeout=10000 --preload test/setup.metrics.ts",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "dotenv": "^16.4.5",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "bun-types": "^1.2.20",
    "husky": "^9.1.7",
    "tslint": "^6.1.3",
    "typescript": "^5.9.2"
  }
}
