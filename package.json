{
  "name": "btc-transaction-scanner-bot",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "author": "Anton Petrushin<@wedigital>",
  "authorUrl": "https://github.com/petrushin-ai/",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "prestart": "[ \"$APP_ENV\" != \"production\" ] && bun run lint || echo 'skip lint in prod'",
    "docker": "bun run docker:build && bun run docker:up",
    "docker:build": "docker build -t btc-transaction-scanner-bot .",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f | cat",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "healthcheck": "bun src/shared/scripts/healthcheck.ts",
    "fixtures:get-blocks": "bun src/shared/scripts/fetch-block-fixtures.ts",
    "fixtures:update-addresses": "bun src/shared/scripts/update-addresses-from-fixtures.ts",
    "test": "bun test",
    "test:docker": "docker build -f Dockerfile.test -t btc-transaction-scanner-bot:test . && docker run --rm -e APP_ENV=production -v $(pwd)/cache:/app/cache -v $(pwd)/logs:/app/logs btc-transaction-scanner-bot:test",
    "test:compare": "bun src/shared/scripts/compare-raw-vs-verbose.ts",
    "test:rates": "bun src/shared/scripts/currencyRates.ts",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "big.js": "^6.2.1",
    "dotenv": "^16.4.5",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "undici": "^6.19.8",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@types/big.js": "^6.2.2",
    "@types/node": "^24.3.0",
    "bun-types": "^1.2.20",
    "fast-check": "^3.18.0",
    "husky": "^9.1.7",
    "tslint": "^6.1.3",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^5.9.2"
  }
}
